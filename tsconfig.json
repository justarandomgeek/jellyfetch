{
    "compilerOptions": {
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "es2019",
        "declaration": true,
        "outDir": "out",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "out"
    ],
    "ts-node": {
        "esm": true
    }
  }